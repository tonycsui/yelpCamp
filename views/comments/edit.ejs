<%- include("../partials/header") %>

<div class="container text-center">

    <h1>Edit Comment</h1>
    
    <form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
        <div class="form-group">
            <input type="text" class="form-control w-25 mx-auto" name="comment[text]" value="<%= comment.text %>">
        </div>
        <button type="submit" class="btn btn-primary w-25">Submit</button>
    </form>

    <a class="btn btn-default" href="/campgrounds/<%= campground_id %>">Go Back</a>
    


</div>


<%- include("../partials/footer") %>
