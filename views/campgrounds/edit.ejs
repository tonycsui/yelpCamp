<%- include("../partials/header") %>

<div class="container text-center">

    <h1>Edit <%= campground.name %></h1>
    
    <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
        <div class="form-group">
            <input type="text" class="form-control w-25 mx-auto" name="campground[name]" value="<%= campground.name %>">
        </div>
        <div class="form-group">
            <input type="text" class="form-control w-25 mx-auto" name="campground[image]" value="<%= campground.image %>">
        </div>
        <div class="form-group">
            <input type="text" class="form-control w-25 mx-auto" name="campground[description]" value="<%= campground.description %>">
        </div>
        <div class="form-group">
            <input type="number" class="form-control w-25 mx-auto" name="campground[price]" value="<%= campground.price %>" min="0.01" step="0.01">
        </div>
        <button type="submit" class="btn btn-primary w-25">Submit</button>
    </form>

    <a class="btn btn-default" href="/campgrounds">Go Back</a>
    


</div>


<%- include("../partials/footer") %>
