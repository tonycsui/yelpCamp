<%- include("../partials/header") %>

<div class="container text-center">

    <h1>Create a New Campground</h1>
    
    <form action="/campgrounds" method="POST">
        <div class="form-group">
            <input type="text" class="form-control w-25 mx-auto" name="name" placeholder="Campground Name">
        </div>
        <div class="form-group">
            <input type="text" class="form-control w-25 mx-auto" name="image" placeholder="Campground Image URL">
        </div>
        <div class="form-group">
            <input type="text" class="form-control w-25 mx-auto" name="description" placeholder="Campground Description">
        </div>
        <div class="form-group">
            <input type="number" class="form-control w-25 mx-auto" name="price" placeholder="Campground Price" min="0.01" step="0.01">
        </div>
        <button type="submit" class="btn btn-primary w-25">Submit</button>
    </form>

    <a class="btn btn-default" href="/campgrounds">Go Back</a>
    


</div>


<%- include("../partials/footer") %>
